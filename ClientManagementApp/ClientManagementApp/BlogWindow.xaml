<Window x:Class="ClientManagementApp.BlogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить запись в блог" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Содержимое записи:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="ContentTextBox" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <Button Content="Добавить" Grid.Row="2" HorizontalAlignment="Right" Width="100" Margin="0,10,0,0" Click="AddButton_Click"/>
    </Grid>
</Window>

