<Window x:Class="ClientManagementApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Логин" Margin="0,5" />
            <TextBox x:Name="UsernameTextBox" Margin="0,5" />

            <TextBlock Text="Пароль" Margin="0,5" />
            <PasswordBox x:Name="PasswordBox" Margin="0,5" />

            <Button Content="Войти" Click="LoginButton_Click" Margin="0,10" />
        </StackPanel>
    </Grid>
</Window>
