@model IEnumerable<BlogPost>
@{
    Layout = "_Layout";
}

<section class="page-section bg-light text-dark py-5">
    <div class="container">
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-5">Наш блог</h2>
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-line"></div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @if (Model == null || !Model.Any())
                {
                    <p>Пока нет записей в блоге.</p>
                }
                else
                {
                    foreach (var post in Model)
                    {
                        <p><strong>@post.DatePosted.ToString("dd.MM.yyyy HH:mm")</strong> - @post.Content</p>
                    }
                }
            </div>
        </div>
    </div>
</section>
