@{
    Layout = "_Layout";
}

@model FinalSite.Models.ClientViewModel

<header class="masthead bg-primary text-white text-center py-5">
    <div class="container d-flex align-items-center flex-column">
        <h1 class="masthead-heading text-uppercase mb-4">Добро пожаловать!</h1>
        <p class="masthead-subheading font-weight-light mb-4">
            Наш айти консалтинг - самый консалтинговый в мире!
        </p>
        <a href="#contact" class="btn btn-light btn-lg text-uppercase">Связаться с нами</a>
    </div>
</header>

<section class="page-section bg-light text-dark py-5" id="contact">
    <div class="container">
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-5">Оставьте заявку</h2>
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-line"></div>
        </div>
        <div class="container mt-5">
            <h1 class="text-center mb-4">Добавить клиента</h1>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <form asp-controller="Clients" asp-action="Create" method="post" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="Name" class="form-label">Имя</label>
                    <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label">Электронная почта</label>
                    <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="mb-3">
                    <label for="Message" class="form-label">Сообщение</label>
                    <textarea class="form-control" id="Message" name="Message" asp-for="Message" rows="4"></textarea>
                    <span class="text-danger" asp-validation-for="Message"></span>
                </div>
                <button type="submit" class="btn btn-primary">Отправить</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}

